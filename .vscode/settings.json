{
  // Purple theme for Sales workspace - visual indicator
  "workbench.colorCustomizations": {
    "activityBar.border": "#9a4f9a",
    "statusBar.noFolderBackground": "#5e2c5e",
    "tab.activeBorderTop": "#9a4f9a"
  },
  
  // Security settings for development workflow
  "security.workspace.trust.enabled": true,
  "github.copilot.chat.runCommand.enabled": true,
  "github.copilot.chat.terminalChatLocation": "terminal",
  "github.copilot.chat.executeCommand.enabled": true,
  "chat.tools.autoApprove": true,
  "chat.agent.maxRequests": 128,
  "chat.tools.terminal.autoApprove": {
    // Auto-approve any command that includes our tools folder scripts
    "/tools\\\\HubSpot\\.ps1/": true,
    "/tools\\\\JIRA\\.ps1/": true,
    "/tools\\\\Elastic\\.ps1/": true,
    // Auto-approve common safe git commands
    "/^git (status|log|diff|show|branch|tag)/": true
  }
}
